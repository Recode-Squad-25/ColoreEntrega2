@model IEnumerable<Colore_Entrega2.Models.Vagas>

@{
    ViewData["Title"] = "Pagina inicial";
}


<div class="container">
    <div class="row text-center">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="~/images/index/0.png" class="d-block w-100" alt="Vagas">
            </div>
            <div class="carousel-item">
              <img src="~/images/index/1.png" class="d-block w-100" alt="Trainee Ipiranga 2022" />
            </div>
            <div class="carousel-item">
              <img src="~/images/index/2.png" class="d-block w-100" alt="Trainne Andrade Gutierrez">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
    </div>
</div>

<hr/>

<div class="d-flex">

<div class="homeCard col-lg-3 text-center">
    <!--Plceholder do icone-->
    <img class="m-5" style="width:100px" src="~/images/pessoa1.png" />
</div>

<div class="homeCard image-flex col-lg-3">
    <p></p>
</div>

<div class="homeCard image-flex col-lg-3">
    <p></p>
</div>

<div class="homeCard image-flex col-lg-3">
    <p></p>
</div>

</div>

<div class="container">
    <div class="row">
       <div class="text-center">            
                   @if(Model != null)
                    {
                       @foreach (var item in Model)
                        {
                            <div class="card" style="width: 18rem;">
                              <img class="card-img-top" src="~/images/@(item.id).png" alt="@item.titulo">
                              <div class="card-body">
                                <h5 class="card-title"> @Html.DisplayFor(modelItem => item.titulo)</h5>
                                <h6 class="card-text"> Remuneração @Html.DisplayFor(modelItem => item.salario)</h6>
                                <a asp-controller="Vagas" asp-action="candidatar" class="btn">Candidate-se</a>
                              </div>
                            </div> 
                            }                   
                     }else{
                                <div class="card" style="width: 18rem;">
                                  <img class="card-img-top" src="~/images/0.png" alt="Vagas">
                                  <div class="card-body">
                                    <h5 class="card-title">@Html.DisplayNameFor(model => model.titulo)</h5>
                                  </div>
                                </div>
                     }        
                </div>
       </div>
</div>

