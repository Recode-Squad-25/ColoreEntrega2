@model IEnumerable<Colore_Entrega2.Models.Vagas>

@{
    ViewData["Title"] = "Curriculo";
}
<body>
    <div class="mae">
        <div class="left-curriculo">
            <div class="user row">
                <img src="~/media/user-img.png" alt="">
            </div>
            <div class="title row">
                <h1>Informações</h1>
            </div>
            
        </div>

        <div class="row right-curriculo">
          <div class="row card-right-curriculo">
              <h5 class="text-center">Aqui ficam suas informações referentes ao seu currículo.</h5>

              <div class="row g-1">
                <div class="col-md-6 p-1 formulario">
                  <input type="text" class="form-control" placeholder="Nome" aria-label="Nome" disabled>
                </div>
                <div class="col-md-6 p-1 formulario">
                  <input type="text" class="form-control" placeholder="Sobrenome" aria-label="Sobrenome"disabled>
                </div>
              </div>
              <div class="row g-1 alinhamento">
                <div class="col-md-6 p-1 formulario">
                    <input type="text" class="form-control" placeholder="Nome Social" aria-label="Nome-Social"disabled>
                </div>
                <div class="col-md-6 p-1 formulario">
                  <input type="text" class="form-control" placeholder="CPF" aria-label="CPF"disabled>
                </div>
              </div>
              <div class="row g-1 alinhamento">
                <div class="col-md-6 p-1 formulario">
                  <input type="text" class="form-control" placeholder="RG" aria-label="RG"disabled>
                </div>
                <div class="col-md-6 p-1 formulario">
                    <input type="text" class="form-control" placeholder="Nascimento" aria-label="Data-De-Nascimento"disabled>
                </div>
              </div>
              <div class="row g-1 alinhamento">
                <div class="col-md-6 p-1 formulario">
                  <input type="text" class="form-control" placeholder="CEP" aria-label="CEP"disabled>
                </div>
                <div class="col-md-6 p-1 formulario">
                  <input type="text" class="form-control" placeholder="Endereço" aria-label="Endereco"disabled>
                </div>
              </div>

              <div class="row g-1 alinhamento">
              <div class="col-md-6 p-1 formulario">
                    <input type="text" class="form-control" placeholder="N°" aria-label="Numero"disabled>
                </div>
                <div class="col-md-6 p-1 formulario">
                    <input type="text" class="form-control" placeholder="Complemento" aria-label="Complemento"disabled>
                </div>
              </div>

              <div class="row g-1 alinhamento">
                <div class="col-md-6 p-1 formulario">
                  <input type="text" class="form-control" placeholder="Bairro" aria-label="Bairro"disabled>
                </div>
                <div class="col-md-6 p-1 formulario">
                  <input type="text" class="form-control" placeholder="Cidade" aria-label="Cidade"disabled>
                </div>
              </div>

              <div class="row g-1 alinhamento">
                <div class="col-md-6 p-1 formulario">
                    <input type="text" class="form-control" placeholder="UF" aria-label="UF"disabled>
                </div>
                <div class="col-md-6 p-1 formulario">
                    <input type="text" class="form-control" placeholder="País" aria-label="País"disabled>
                </div>
              </div>
              <div class="row g-1 alinhamento">
                <div class="col-md-4 p-1 formulario">
                  <input type="text" class="form-control" placeholder="Área de atuação" aria-label="Area-de-atuacao"disabled>
                </div>
                <div class="col-md-4 p-1 formulario">
                  <input type="text" class="form-control" placeholder="Experiência?" aria-label="experiencia"disabled>
                </div>
                <div class="col-md-4 p-1 formulario">
                    <input type="text" class="form-control" placeholder="Tempo" aria-label="Tempo"disabled>
                </div>
              </div>
              <div class="row g-1 alinhamento">
                <div class="col-md-4 p-1 formulario">
                  <input type="text" class="form-control" placeholder="Escolaridade" aria-label="Escolaridade"disabled>
                </div>
                <div class="col-md-4 p-1 formulario">
                  <input type="text" class="form-control" placeholder="Curso" aria-label="Curso"disabled>
                </div>
                <div class="col-md-4 p-1 formulario">
                    <input type="text" class="form-control" placeholder="Instituição" aria-label="Instituicao"disabled>
                </div>
              </div>
              <div class="row g-1 alinhamento">
                <div class="col">
                  <button class="botao btn btn-warning" type="submit">
                    <a style="color: black;a asp-controller="Home" asp-action="EditarCurriculo">Editar informações</a>
                  </button>
                </div>
                <div class="col">
                  <button class="botao btn btn-dark" type="submit">
                    <a a asp-controller="Home" asp-action="Index">Fazer logout</a>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
</body>
